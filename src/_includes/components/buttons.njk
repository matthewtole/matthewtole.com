{% macro cta(text, url, classes) %}
  <a
  href="{{url}}"
  class="bg-cta py-2 px-8 font-semibold rounded border-cta-dark border-b-4 hover:border-b-2 hover:mt-2px text-white hover:text-cta-light transition-all duration-200 {{classes}}"
  >{{text}}</a>
{% endmacro %}

{% macro cta_icon(icon, url, classes, id) %}
  {% set icon_url %}/src/icons/icon-{{icon}}.svg{% endset %}
  <a
  href="{{url}}"
  id="{{id}}"
  class="bg-cta py-2 px-4 rounded border-cta-dark border-b-4 hover:border-b-2 hover:mt-2px text-white hover:text-cta-light fill-current transition-all duration-200  {{classes}}"
  >
    {{ icon_url | svgContents | safe }}
  </a>
{% endmacro %}