{% macro cta(text, url, classes) %}
  <a
  href="{{url}}"
  class="bg-nord9 py-2 px-8 font-semibold rounded border-nord10 border-b-4 hover:border-b-2 hover:mt-2px text-white transition-all duration-200 {{classes}}"
  >{{text}}</a>
{% endmacro %}

{% macro cta_icon(icon, url, classes, id) %}
  {% set icon_url %}/src/icons/icon-{{icon}}.svg{% endset %}
  <a
  href="{{url}}"
  id="{{id}}"
  class="bg-nord9 py-2 px-4 rounded border-nord10 border-b-4 hover:border-b-2 hover:mt-2px text-white fill-current transition-all duration-200  {{classes}}"
  aria-label="{{icon}}"
  >
    {{ icon_url | svgContents | safe }}
  </a>
{% endmacro %}