{% macro year(text) %}
  <h3 class="items-center justify-center hidden w-16 h-16 -mx-8 font-bold bg-white border-2 rounded-full text-nord3 border-nord4 md:flex">
    {{text}}
  </h3>
{% endmacro %}

{% macro header(title, subtitle) %}
  <div class="flex flex-col lg:flex-row lg:items-end">
    <h3 class="font-serif text-lg">{{ title }}</h3>
    <h4 class="font-serif text-nord3 lg:ml-2">{{ subtitle }}</h4>
  </div>
{% endmacro %}