---
layout: layouts/base.njk
---

{% import "components/buttons.njk" as buttons %}

<header class="sticky top-0 z-20 bg-nord4">
  <div class="flex items-center p-2">
    <h1 class="ml-4 font-serif text-4xl">
      <a href="/" class="transition-all duration-200 hover:text-nord10">matthew tole</a>
    </h1>
    <div class="flex-grow"></div>
    <div class="flex lg:hidden">
      {{ buttons.cta_icon("menu", "#", "", "btn-mobile-menu") }}
    </div>
    <div class="hidden lg:flex">
      {{ buttons.cta_icon("home", "/", "mx-2") }}
      {{ buttons.cta("RESUME", "/resume/", "mx-2") }}
      {{ buttons.cta("ARTICLES", "/articles/", "mx-2") }}
      {{ buttons.cta("PROJECTS", "/projects/", "mx-2") }}
    </div>
  </div>
  <ul class="absolute left-0 right-0 z-50 hidden h-screen p-4 shadow-lg bg-black-alpha-75" id="mobile-menu">
    {{ buttons.cta("HOME", "/", "mb-4 block text-center") }}
    {{ buttons.cta("RESUME", "/resume/", "mb-4 block text-center") }}
    {{ buttons.cta("ARTICLES", "/articles/", "mb-4 block text-center") }}
    {{ buttons.cta("PROJECTS", "/projects/", "mb-4 block text-center") }}
  </ul>
</header>

{{content | safe}}
