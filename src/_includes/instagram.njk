<div class="flex flex-wrap md:w-2/3 lg:w-1/2 xl:w-1/3 mx-auto justify-center p-2">
{% for post in instagram %}
  <a href="{{post.link}}" class="w-1/3 md:1/4 p-2 block" target="_blank">
  <div class="relative group">
    <img
      class="shadow"
      srcset="
        /static/images/instagram/{{post.shortcode}}_150.png 150w,
        /static/images/instagram/{{post.shortcode}}_250.png 240w,
        /static/images/instagram/{{post.shortcode}}_320.png 320w,
        /static/images/instagram/{{post.shortcode}}_480.png 480w,
        /static/images/instagram/{{post.shortcode}}_640.png 640w
      "
      src="/static/images/instagram/{{post.shortcode}}.png"
      >
    <div class="absolute inset-0 bg-black text-white flex justify-center items-center fill-current flex flex-col opacity-0 transition-opacity transition-250 group-hover:opacity-100">{{post.likes}} {{ "/src/icons/icon-heart.svg" | svgContents | safe }}</div>
  </div>
  </a>
{% endfor %}
</div>
