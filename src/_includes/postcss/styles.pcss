@import 'nord-highlightjs/dist/nord.css';

@tailwind base;
@tailwind components;

.hover\:mt-2px:hover {
  margin-top: 2px;
}

.bg-black-alpha-50 {
  background-color: rgba(0, 0, 0, 0.5);
}

.bg-black-alpha-75 {
  background-color: rgba(0, 0, 0, 0.75);
}

img {
  color: transparent;
}

span[data-pun] {
  @apply font-bold border-b-2 text-nord9 border-nord8;
  cursor: help;
}

.tippy-box {
  @apply rounded-none bg-nord0 text-nord6;
}

article p > code,
article li > code {
  @apply text-nord2 bg-nord6;
  box-shadow: 2px 0 0 #eceff4, -2px 0 0 #eceff4;
}

article h2 {
  @apply my-4 font-serif text-3xl;
}

article h3 {
  @apply my-2 font-serif text-2xl;
}

article p {
  @apply mb-4 text-justify text-lg;
}

article a {
  @apply border-b text-nord9 border-nord9;
  box-shadow: inset 0 -1px 0 #81a1c1;
}

article a:hover {
  @apply text-white bg-nord9;
  box-shadow: 0 -1px 0 #81a1c1;
}

article ul {
  @apply mb-4 list-disc;
}

article ol {
  @apply mb-4 list-decimal;
}

article blockquote {
  @apply px-4 py-2 mb-4 mx-0 border-l-8 border-nord12 text-nord3 text-base;
}

article blockquote p {
  @apply m-0;
}

.hljs {
  @apply p-4 mt-4 mb-4;
}

.hljs + .hljs {
  @apply border-t-4 border-nord2;
  margin-top: -1em;
}

@tailwind utilities;
