---
layout: layouts/page.njk
title: Articles
pagination:
  data: collections.article
  size: 6
  alias: articles
  reverse: true
---

<div class="max-w-4xl px-4 mx-auto mb-4">

  <div class="relative px-4 py-4 my-4 text-center lg:py-8 lg:my-8">
    <h2 class="font-serif text-3xl lg:text-5xl text-nord3">
      <span>Articles</span>
      <a href="/feed.xml" class="inline-block w-8 transition-all duration-200 fill-current text-nord3 hover:text-nord12" data-tippy-content="Subscribe to RSS feed" data-tippy-position="bottom">{{ "/src/icons/icon-rss.svg" | svgContents | safe }}</a>
    </h2>
  </div>

  {%- for post in articles -%}
    <div class="mb-8">
      <h3 class="font-serif text-lg lg:text-2xl">
        <a class="hover:underline" href="{{ post.url }}">{{ post.data.title }}</a>
      </h3>
      <p class="mt-1 text-sm leading-tight lg:text-base">{{post.data.snippet }}</p>
    </div>
  {%- endfor -%}

</div>