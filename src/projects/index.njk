{% import "components/projects.njk" as projects %}
{% import "components/modal.njk" as modal %}

<div class="max-w-3xl mx-auto px-4 mb-4">

  <h2 class="font-serif text-2xl my-4">Projects</h2>

  <p>Here are a few of the things I have worked on over the past few years.</p>

  <h3 class="font-serif text-xl my-2">Websites</h3>

  <div class="flex flex-wrap -m-1">
    {{ projects.tile_modal("kathew", "https://wedding.tole.family") }}
    {{ projects.tile_modal("matthewtole", "https://matthewtole.com") }}
    {{ projects.tile_modal("catandjoe", "https://catandjoe.wedding") }}
    {{ projects.tile_modal("katherinetole", "https://katherinetole.com") }}
    {{ projects.tile_modal("lushmouthfeel", "https://lushmouthfeel.com") }}
  </div>

  <h3 class="font-serif text-xl my-2">Miscelleanous</h3>

  <div class="flex flex-wrap -m-1">
    {{ projects.tile_link("empire-uncut") }}
    {{ projects.tile_link("puns") }}
