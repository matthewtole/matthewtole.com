---
layout: layouts/page.njk
title: Projects
---

{% import "components/projects.njk" as projects %}
{% import "components/modal.njk" as modal %}

<div class="max-w-5xl px-4 mx-auto mb-4">

  <h2 class="my-4 font-serif text-2xl">Projects</h2>

  <p>Here are a few of the things I have worked on over the past few years.</p>

  <h3 class="my-2 font-serif text-xl">Websites</h3>

  <div class="flex flex-wrap -m-1">
    {% for website in collections.websites %}
      <div class="w-full p-1 transition-all duration-200 border-2 border-white sm:w-1/2 md:w-1/3 xl:w-1/4 hover:border-nord10">
        <a
    class="relative block shadow aspect-wide"
    href="{{ website.data.linkUrl }}"
    data-modal="website"
    data-modal-content="website/{{ website.fileSlug }}"
    aria-label="{{website.data.linkUrl}}"
  >
          {% websiteScreenshot website.data.linkUrl %}
        </a>
      </div>
    {% endfor %}
  </div>

  <h3 class="my-2 font-serif text-xl">Miscelleanous</h3>

  <div class="flex flex-wrap -m-1">
    <div class="w-full p-1 transition-all duration-200 border-2 border-white sm:w-1/2 md:w-1/3 xl:w-1/4 hover:border-nord10">
      <a
    class="relative block shadow aspect-wide"
    href="/projects/empire-uncut/"
  >
        {% responsiveImage "src/images/projects/empire-uncut.jpg",
        "Empire Uncut" %}
      </a>
    </div>

    <div class="w-full p-1 transition-all duration-200 border-2 border-white sm:w-1/2 md:w-1/3 xl:w-1/4 hover:border-nord10">
      <a
    class="relative block shadow aspect-wide"
    href="/projects/puns/"
  >
        {% responsiveImage "src/images/projects/puns.png",
        "Puns" %}
      </a>
    </div>
  </div>
</div>

<div class="fixed inset-0 z-50 flex items-center justify-center hidden js-modal-container" data-modal="website">
  <div class="relative w-full p-8 bg-white rounded shadow sm:w-1/2 lg:w-1/3">
    {{ modal.close_button() }}

    {% for website in collections.websites %}
      <div class="hidden js-modal-content" data-modal-content="website/{{ website.fileSlug }}">
        {{ projects.modal_header(website.fileSlug, website.data.title, website.data.linkUrl) }}
        {{ website.templateContent | safe }}
      </div>

    {% endfor %}
  </div>
</div>